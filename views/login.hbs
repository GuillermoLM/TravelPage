<div class="container-fluid">
    <div class="row img-Register d-flex align-items-center">
        <div class="offset-3 col-6">
            <div class="row loginBox d-flex align-items-center">
                <div class="offset-2 col-8 ">
                    <h3 id="titR">LOGIN</h3>
                    <form method="post">
                        <div class="form-row">
                            <input type="text" class="form-control rInput" name="user" placeholder="Usuario o email">
                        </div>
                        <div class="form-row">
                            <input type="password" class="form-control rInput" name="passW" placeholder="Contraseña">
                        </div>
                        {{#if info}}
                        <div>
                            <p> </p>
                            <div class="alert alert-success alert-dismissible">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>ERROR</strong> {{info}}
                            </div>
                        </div>
                        {{/if}}
                        <div class="form-check">
                            <button type="submit" class="btn-lg btn-warning">Enviar</button>
                        </div>
                        <br>
                        <a href="#" class="loginEnlace">¿No recuerdas tu contraseña?</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>